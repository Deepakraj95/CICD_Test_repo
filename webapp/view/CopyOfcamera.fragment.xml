<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:lab="openui5.camera">
	<ResponsivePopover id ="camerabox" title="Upload" placement="Right" modal="true" >
		<beginButton>
			<Button icon="sap-icon://camera" tooltip="Capture" press="handleCapture"/>
		</beginButton>
		<ToolbarSpacer/>
		<endButton>
			<Button icon="sap-icon://decline" tooltip="Close" press="handleCloseButton"/>
		</endButton>
		<content>
			<lab:Camera id="idCamera"  snapshot="onSnapshot"/>
		</content>
	</ResponsivePopover>
</core:FragmentDefinition>